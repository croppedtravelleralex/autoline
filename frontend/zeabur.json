{
    "build": {
        "type": "static",
        "command": "npm install --legacy-peer-deps && npm run build",
        "output": "dist"
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "https://your-backend-url.zeabur.app/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}